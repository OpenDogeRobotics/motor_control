<?xml version="1.0"?>
<robot name="motor_control">
  <!-- Joint definition -->
  <joint name="joint1" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="link1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-12.0" upper="12.0" effort="12.5" velocity="50.0"/>
  </joint>

  <!-- Link definition -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
    </visual>
  </link>

  <!-- ros2_control configuration -->
  <ros2_control name="MotorControlHardware" type="system">
    <hardware>
      <plugin>motor_control_interface/MotorHardware</plugin>
      <param name="can_interface">can0</param>
      <param name="master_id">253</param>
    </hardware>

    <joint name="joint1">
      <param name="motor_id">1</param>
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>
</robot>